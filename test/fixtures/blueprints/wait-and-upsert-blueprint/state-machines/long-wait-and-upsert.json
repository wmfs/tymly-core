{
  "StartAt": "Wait",
  "States": {
    "Wait": {
      "Type": "Wait",
      "Seconds": "2",
      "Next": "Upserting"
    },
    "Upserting": {
      "Type": "Task",
      "InputPath": "$.person",
      "Resource": "module:upserting",
      "ResourceConfig": {
        "modelId": "people"
      },
      "Next": "Finding"
    },
    "Finding": {
      "Type": "Task",
      "InputPath": "$.person",
      "Resource": "module:findingOne",
      "ResourceConfig": {
        "modelId": "people",
        "filter": {
          "where": {
            "employeeNo": {
              "equals": "$.employeeNo"
            }
          }
        }
      },
      "ResultPath": "$.upsertedPerson",
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "$authenticated",
      "allows": [
        "*"
      ]
    }
  ]
}
