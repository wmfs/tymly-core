{
  "name": "@wmfs/tymly",
  "version": "0.0.0-semantically-released",
  "description": "A framework for building and sharing workflows in Node.js",
  "author": "West Midlands Fire Service",
  "homepage": "https://github.com/wmfs/tymly-core#readme",
  "keywords": [
    "tymly",
    "package",
    "low code",
    "workflow",
    "open source"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wmfs/tymly-core.git"
  },
  "bugs": {
    "url": "https://github.com/wmfs/tymly-core/issues"
  },
  "main": "./lib/index.js",
  "dependencies": {
    "async": "2.6.1",
    "boom": "7.2.0",
    "debug": "3.1.0",
    "dottie": "2.0.0",
    "esprima": "4.0.0",
    "glob": "7.1.2",
    "jsonpath": "1.0.0",
    "jsonschema": "1.2.4",
    "lodash": "4.17.10",
    "lru-cache": "4.1.3",
    "moment": "2.22.2",
    "mkdirp": "0.5.1",
    "mongodb-extended-json": "1.10.0",
    "nanoid": "1.0.7",
    "read-pkg-up": "3.0.0",
    "split": "1.0.1",
    "sprintf-js": "1.1.1",
    "@wmfs/statebox": "1.2.1",
    "underscore-query": "3.3.2",
    "upath": "1.1.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "chai-subset": "1.6.0",
    "codecov": "3.0.4",
    "cz-conventional-changelog": "2.1.0",
    "mocha": "5.2.0",
    "nyc": "12.0.2",
    "moment": "2.22.2",
    "semantic-release": "^15.5.2",
    "standard": "11.0.1",
    "@wmfs/tymly-test-helpers": "1.0.1"
  },
  "scripts": {
    "lint": "standard",
    "test": "nyc mocha && standard",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "build",
          "scope": "deps",
          "release": "minor"
        },
        {
          "type": "build",
          "scope": "deps-dev",
          "release": "patch"
        }
      ]
    }
  }
}
